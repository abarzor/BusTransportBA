<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BusTransport.Mob.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage">

    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">
        <Entry x:Name="UsernameEntry" Placeholder="Login" />
        <Entry
            x:Name="PasswordEntry"
            IsPassword="True"
            Placeholder="Hasło" />
        <Button Clicked="OnLoginClicked" Text="Zaloguj się" />
        <Button Clicked="OnReportProblemClicked" Text="Zgłoś problem" />
    </VerticalStackLayout>
</ContentPage>