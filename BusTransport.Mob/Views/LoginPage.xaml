<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BusTransport.Mob.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Logowanie">

    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">
        <Entry
            x:Name="UsernameEntry"
            BackgroundColor="LightGrey"
            HeightRequest="55"
            Placeholder="Login"
            PlaceholderColor="DarkGray"
            TextColor="Black"
            WidthRequest="400" />
        <Entry
            x:Name="PasswordEntry"
            BackgroundColor="LightGrey"
            HeightRequest="55"
            IsPassword="True"
            Placeholder="Hasło"
            PlaceholderColor="DarkGray"
            TextColor="Black"
            WidthRequest="400" />
        <Button
            BackgroundColor="Grey"
            Clicked="OnLoginClicked"
            HeightRequest="60"
            Text="Zaloguj"
            WidthRequest="300" />
        <Button
            BackgroundColor="White"
            BorderColor="Black"
            BorderWidth="2"
            Clicked="OnReportProblemClicked"
            HeightRequest="40"
            Text="Zgłoś problem"
            TextColor="Black"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>