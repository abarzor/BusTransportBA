<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BusTransport.Mob.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage">

    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">
        <Entry x:Name="UsernameEntry" Placeholder="Login" />
        <Entry
            x:Name="PasswordEntry"
            IsPassword="True"
            Placeholder="Hasło" />
        <Button
            Clicked="OnLoginClicked"
            HeightRequest="60"
            Text="Zaloguj"
            WidthRequest="200" />
        <Button
            BackgroundColor="White"
            BorderColor="Black"
            BorderWidth="2"
            Clicked="OnReportProblemClicked"
            HeightRequest="40"
            Text="Zgłoś problem"
            TextColor="Black"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>