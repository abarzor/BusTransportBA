@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow card">
                <div class="card-header text-center text-light bg-secondary py-3">
                    <h4 class="mb-0">Logowanie</h4>
                </div>
                <div class="card-body p-4">
                    <div class="border p-3">
                        <form>
                            <div class="form-floating py-2 col-12">
                                <input type="text" class="form-control border-0 shadow">
                                <label class="ms-2" for="username">Adres e-mail</label>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input type="password" class="form-control border-0 shadow">
                                <label class="ms-2" for="password">Hasło</label>
                            </div>
                            <div class="form-group form-check mt-4">
                                <input type="checkbox" class="form-check-input border-1 shadow bg-secondary" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Zapamiętaj mnie</label>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-secondary btn-lg">Zaloguj się</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center text-light bg-secondary py-3">
                    <div class="d-flex justify-content-center align-items-center">
                        <h5 class="mb-0">Nie masz konta?&nbsp&nbsp</h5>
                        <a class="btn btn-outline-light btn-lg ml-2" role="button" asp-controller="LoginRegister" asp-action="Register"> Zarejestruj się</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>