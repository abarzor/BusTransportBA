@{
    ViewData["Title"] = "Planowanie podróży";
}
@model TicketVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Zaplanuj podróż</h2>
            </div>
        </div>
    </div>
</div>

<div class="card-body p-4 bg-light shadow">
    <div class="row">
        <div class="col-md-7">
            <div id="map" class="mt-3 shadow leaflet-container leaflet-touch leaflet-retina leaflet-fade-anim leaflet-grab leaflet-touch-drag leaflet-touch-zoom">
            </div>
        </div>
        <div class="col-md-5">
            <div class="card border-0 mt-3">
                <div class="card-body p-4 bg-light">
                    <form method="post" class="row">
                        <div class="border p-3 text-black text-center">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="form-floating py-2 col-12">
                                        <input type="text" class="form-control border-0 shadow" id="startCity" placeholder="Wprowadź miasto">
                                        <label class="ms-2">Miasto startowe</label>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input type="text" class="form-control border-0 shadow" id="endCity" placeholder="Wprowadź miasto">
                                        <label class="ms-2">Miasto końcowe</label>
                                    </div>
                                    <div class="form-floating py-2 col-12 text-center">
                                        <button id="findRouteBtn" type="button" onclick="findRoute()" class="btn btn-secondary btn-lg" style="width: 200px;">Szukaj trasy</button>
                                    </div>
                                </div>
                            </div>
