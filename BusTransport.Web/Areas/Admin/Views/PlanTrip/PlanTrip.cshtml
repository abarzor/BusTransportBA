                            <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.BusStop.BusStop_Id" asp-items="@Model.BusStopList" class="form-control border-0 shadow" id="endCity">
                            <option class="p-3 text-lg" selected default>-- Wybierz przystanek startowy --</option>
                            </select>
                            <label class="ms-2">Przystanek startowy</label>
                            <span asp-validation-for="BusStop.BusStop_Id" class="text-danger"></span>
                            </div> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <script src="~/js/map.js" asp-append-version="true"></script>
    }
}