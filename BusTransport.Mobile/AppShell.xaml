<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BusTransport.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BusTransport.Mobile"
    xmlns:views="clr-namespace:BusTransport.Mobile.Views"
    Title="BusTransport.Mobile"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Route" Icon="icon_route.png">
            <ShellContent ContentTemplate="{DataTemplate views:RoutePage}" />
        </Tab>
        <Tab Title="BusMap" Icon="icon_busmap.png">
            <ShellContent ContentTemplate="{DataTemplate views:BusMapPage}" />
        </Tab>
        <Tab Title="StopList" Icon="icon_stoplist.png">
            <ShellContent ContentTemplate="{DataTemplate views:StopListPage}" />
        </Tab>
        <Tab Title="TicketValidation" Icon="icon_ticketvalidation.png">
            <ShellContent ContentTemplate="{DataTemplate views:TicketValidationPage}" />
        </Tab>
    </TabBar>

</Shell>
