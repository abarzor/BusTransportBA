<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BusTransport.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BusTransport.Mobile"
    xmlns:views="clr-namespace:BusTransport.Mobile.Views"
    Title="BusTransport.Mobile"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Route" Icon="route_icon.png" ContentTemplate="{DataTemplate views:RoutePage}" />
        <ShellContent Title="BusMap" Icon="busmap_icon.png" ContentTemplate="{DataTemplate views:BusMapPage}" />
        <ShellContent Title="StopList" Icon="stoplist_icon.png" ContentTemplate="{DataTemplate views:StopListPage}" />
        <ShellContent Title="TicketValidation" Icon="ticketvalidation_icon.png" ContentTemplate="{DataTemplate views:TicketValidationPage}" />
    </TabBar>
</Shell>
